pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                sh 'cd mi-proyecto && mvn clean install'
            }
        }
        stage('Test'){
            steps{
                sh 'cd mi-proyecto mvn test'
            }
        }
        stage('Deploy'){
            steps{
                echo "Simulando un despliegue a un servidor de aplicaciones"
            }
        }
    }

    post {
        always{
            echo "Siempre se ejecutara..."
        }
        success{
            echo "Exito este bloquese ejeuta si tod el pipelinese ejecuta correcamente"
        }
        failure{
            echo "Este bloque se ejecuta si el pipeline fall"
        }
    }
}